<?xml version="1.0" encoding="utf-8"?>

<resources>

  <eat-comment />

  <style name="Aweather.Search" />

  <style name="Aweather.Search.InputLayout"
    parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxBackgroundColor">@color/shark</item>
    <item name="boxCornerRadiusBottomEnd">24dp</item>
    <item name="boxCornerRadiusBottomStart">24dp</item>
    <item name="boxCornerRadiusTopEnd">24dp</item>
    <item name="boxCornerRadiusTopStart">24dp</item>
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxStrokeWidthFocused">0dp</item>
    <item name="endIconMode">clear_text</item>
    <item name="endIconTint">@color/spunPearl</item>
    <item name="errorEnabled">true</item>
    <item name="errorIconDrawable">@null</item>
    <item name="hintEnabled">false</item>
    <item name="startIconDrawable">@drawable/ic_find</item>
    <item name="startIconTint">@color/manatee</item>
  </style>

  <style name="Aweather.Search.InputEditText">
    <item name="android:fontFamily">@font/chakra_petch</item>
    <item name="android:textColor">@color/spunPearl</item>
    <item name="android:textColorHint">@color/spunPearl</item>
    <item name="android:textSize">14sp</item>
    <item name="fontFamily">@font/chakra_petch</item>
  </style>

</resources>
