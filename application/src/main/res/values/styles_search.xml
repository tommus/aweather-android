<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

  <eat-comment />

  <style name="Aweather.Search" />

  <style name="Aweather.Search.InputLayout"
    parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxBackgroundColor">@color/shark</item>
    <item name="boxCornerRadiusBottomEnd">24dp</item>
    <item name="boxCornerRadiusBottomStart">24dp</item>
    <item name="boxCornerRadiusTopEnd">24dp</item>
    <item name="boxCornerRadiusTopStart">24dp</item>
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxStrokeWidthFocused">0dp</item>
    <item name="endIconDrawable">@drawable/ic_clear</item>
    <item name="endIconMode">clear_text</item>
    <item name="endIconTint">@color/spunPearl</item>
    <item name="errorEnabled">true</item>
    <item name="errorIconDrawable">@null</item>
    <item name="hintEnabled">false</item>
    <item name="startIconDrawable">@drawable/ic_find</item>
    <item name="startIconTint">@color/manatee</item>
  </style>

  <style name="Aweather.Search.InputEditText"
    parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
    <item name="android:fontFamily">@font/chakra_petch</item>
    <item name="android:padding">0dp</item>
    <item name="android:textColor">@color/spunPearl</item>
    <item name="android:textColorHint">@color/spunPearl</item>
    <item name="android:textSize">14sp</item>
    <item name="android:theme">@style/Theme.Aweather.EditText</item>
    <item name="fontFamily">@font/chakra_petch</item>
  </style>

  <style name="Aweather.Placeholder" />

  <style name="Aweather.Placeholder.Icon">
    <item name="android:minWidth">64dp</item>
    <item name="android:minHeight">64dp</item>
    <item name="drawableTint">@android:color/white</item>
  </style>

  <style name="Aweather.Placeholder.Title">
    <item name="android:fontFamily">@font/russo</item>
    <item name="fontFamily">@font/russo</item>
  </style>

  <style name="Aweather.Placeholder.Prompt">
    <item name="android:fontFamily">@font/chakra_petch</item>
    <item name="android:fontWeight" tools:targetApi="o">600</item>
    <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/manatee</item>
    <item name="fontFamily">@font/chakra_petch</item>
    <item name="fontWeight">600</item>
    <item name="lineHeight">20sp</item>
  </style>

  <style name="Aweather.Recent" />

  <style name="Aweather.Recent.Decor">
    <item name="tint">@color/robRoy</item>
  </style>

  <style name="Aweather.Recent.Header">
    <item name="android:fontFamily">@font/chakra_petch</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">12sp</item>
    <item name="fontFamily">@font/chakra_petch</item>
  </style>

  <style name="Aweather.Recent.Name">
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:lines">1</item>
    <item name="android:textSize">14sp</item>
    <item name="drawableStartCompat">@drawable/ic_recent</item>
    <item name="drawableTint">@color/manatee</item>
  </style>

  <style name="Aweather.Search.Decor">
    <item name="tint">@color/robRoy</item>
  </style>

  <style name="Aweather.Search.Header">
    <item name="android:fontFamily">@font/chakra_petch</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">12sp</item>
    <item name="fontFamily">@font/chakra_petch</item>
  </style>

  <style name="Aweather.Search.Result">
    <item name="android:fontFamily">@font/chakra_petch</item>
    <item name="fontFamily">@font/chakra_petch</item>
  </style>

  <style name="Aweather.Search.Result.Name">
    <item name="android:includeFontPadding">false</item>
    <item name="android:lines">1</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Aweather.Search.Result.Details">
    <item name="android:ellipsize">end</item>
    <item name="android:fontWeight" tools:targetApi="o">300</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:lines">1</item>
    <item name="android:textColor">@color/manatee</item>
    <item name="android:textSize">12sp</item>
    <item name="fontWeight">300</item>
  </style>

</resources>
