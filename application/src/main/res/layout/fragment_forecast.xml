<?xml version="1.0" encoding="utf-8"?>

<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="viewModel"
      type="dev.windly.aweather.presentation.forecast.ForecastViewModel" />

  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <include
        layout="@layout/layout_forecast_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <include
        layout="@layout/layout_suncycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <include
        layout="@layout/layout_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <include
        layout="@layout/layout_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <include
        layout="@layout/layout_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <include
        layout="@layout/layout_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <include
        layout="@layout/layout_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:state="@{viewModel.state}" />

      <!-- Rain - 1h. -->

      <!-- Rain - 3h. -->

    </LinearLayout>

  </ScrollView>

</layout>
